<div style="background-color:#F6A21E ;direction:rtl ; ">
    

   
<form action="/home/show" method="get" >
<input type="int" asp-for="id" style="display:none ;" >
<p ><b> نام و نام خانوادگی:</b> </p>
                    <input  type="text" asp-for="name" class="form-control mb-3 mt-3 " placeholder="نام و نام خانوادگی" required >
                    
                    
<p>   <b>شماره تلفن: </b> </p>
                    <input type="text" asp-for="number" onblur="validatePhone()" class="form-control mb-3" placeholder="شماره تلفن " required >
                    
